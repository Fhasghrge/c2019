#include <stdio.h> 
#include <time.h>
#include<windows.h>

#define Wall_length 80
#define Speed 10 

int main ()
{
    int i=1;
    while(1)
    {
        if(i<Wall_length)
        {
            for(n=1;n<=i;n++)
            printf(" ");
        }
        else
        {
            for (n=1;n<=2*Wall_length-i;n++)
            printf(" ");
        }
        sleep(Speed);
        printf("@");
        system("cls");
        i++;
    }
    return 0;
}
